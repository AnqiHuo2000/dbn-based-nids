{
    "name": "multilayer-perceptron",
    "model": {
        "type": "MLP",
        "args": {
            "num_features": 49,
            "hidden1_size": 64,
            "hidden2_size": 64,
            "num_classes": 6
        }
    },
    "data_loader": {
        "type": "CICIDS2017DataLoader",
        "args": {
            "batch_size": 64
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.02,
            "momentum": 0.9,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {
            "reduction": "mean"
        }
    },
    "trainer": {
        "num_epochs": 10
    }
}