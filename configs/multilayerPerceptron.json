{
    "name": "multilayer-perceptron",
    "model": {
        "type": "MLP",
        "args": {
            "num_features": 47,
            "hidden1_size": 64,
            "hidden2_size": 64,
            "num_classes": 6
        }
    },
    "data_loader": {
        "type": "CICIDS2017DataLoader",
        "args": {
            "batch_size": 128
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {
            "reduction": "mean"
        }
    },
    "trainer": {
        "num_epochs": 3
    }
}